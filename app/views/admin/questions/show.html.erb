<div class="question">
  <h3 class="question__title"><%= @question.body %></h3>
  <h4>Answers</h4>
  <ol>
    <% @question.answers.each do |answer| %>
      <li>
        <p><%= answer.body %> | <%= link_to '->', admin_answer_path(answer) %></p>
      </li>
    <% end %>
  </ol>
</div>

<%= link_to t('g.back'), admin_test_path(@test) %> |
<%= link_to t('g.edit'), edit_admin_question_path(@question) %> |
<%= link_to t('g.delete'),
  admin_question_path(@question),
  class: 'question__delete-link',
  method: :delete,
  title: t('g.delete'),
  data: { confirm: t('g.confirm') } %> |
<%= link_to t('.new'), new_admin_question_answer_path(@question) %>