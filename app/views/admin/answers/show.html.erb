<div class="answer">
  <p class="answer__body"><%= @answer.body %></p>
  <p class="answer__correct">
    <% if @answer.correct %>
      correct
    <% else%>
      incorrect
    <% end%>
  </p>
</div>

<%= link_to 'Back to question', admin_question_path(@question) %> |
<%= link_to 'Edit', edit_admin_answer_path(@answer) %> |
<%= link_to 'Delete',
  admin_answer_path(@answer),
  class: 'answer__delete-link',
  method: :delete,
  title: 'Delete',
  data: { confirm: 'You sure?' } %>