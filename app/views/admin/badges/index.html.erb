<h1><%= t('g.badges') %></h1>

<p><%= link_to t('.new'), new_admin_badge_path, class: 'btn btn-success' %></p>
<p><%= link_to 'My badges', badges_path, class: 'btn btn-primary' %></p>

<% if @badges.any? %>
  <table class="table table-bordered table-secondary">
    <tr>
      <th class="image">Image</th>
      <th class="name">Name</th>
      <th>Description</th>
      <th>Update</th>
    </tr>
    <% @badges.each do |badge| %>
      <%= render 'badge', badge: badge %>
    <% end %>
  </table>
<% else %>
  <div class="no-badges d-flex justify-content-center align-items-center">
    <div class="p-5 border border-primary rounded"><%= t('.no-badges') %></div>
  </div>
<% end %>
