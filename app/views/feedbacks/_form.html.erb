<%= form_for :feedback, url: feedbacks_path, local: true do |f| %>
  <div class="card border-success mb-3">
    <div class="card-body">
      <div class="form-group">
        <p>
          <%= f.label :body %>
          <%= f.text_area :body, class: 'form-control' %>
        </p>

        <%= f.submit class: 'btn btn-success' %>
      </div>
    </div>
  </div>
<% end%>
