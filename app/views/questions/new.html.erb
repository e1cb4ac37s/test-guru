<div class="<%= controller_name %> <%= action_name %>">
  <h1>Создать вопрос</h1>

  <form action="/tests/<%= @test.id %>/questions" method="post">
    <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">

    <div class="form-group">
      <div class="form-control">
        <label for="question-body">Вопрос</label>
        <textarea name="body" id="question-body"></textarea>
      </div>
    </div>

    <div class="form-group">
      <div class="form-control">
        <button type="submit">
          Создать!
        </button>
      </div>
    </div>
  </form>
</div>