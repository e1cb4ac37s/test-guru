<h1><%= t('g.badges') %></h1>

<% if current_user.badges&.any? %>
  <table class="table table-bordered table-success">
    <caption class="text-success">My badges</caption>
    <tr>
      <th class="image">Image</th>
      <th class="name">Name</th>
      <th>Description</th>
    </tr>
    <% current_user.badges.each do |badge| %>
      <%= render 'badge', badge: badge %>
    <% end %>
  </table>
<% end %>

<% if @badges.any? %>
  <table class="table table-bordered table-secondary">
    <caption>All badges</caption>
    <tr>
      <th class="image">Image</th>
      <th class="name">Name</th>
      <th>Description</th>
    </tr>
    <% @badges.each do |badge| %>
      <%= render 'badge', badge: badge %>
    <% end %>
  </table>
<% else %>
  <div class="no-badges d-flex justify-content-center align-items-center">
    <div class="p-5 border border-primary rounded"><%= t('.no-badges') %></div>
  </div>
<% end %>
